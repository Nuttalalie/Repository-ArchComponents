<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cvHeroInfoContainer"
        android:layout_width="@dimen/hero_card_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/hero_card_margin"
        android:layout_marginEnd="@dimen/hero_card_margin"
        android:layout_marginStart="@dimen/hero_card_margin"
        android:layout_marginTop="@dimen/hero_card_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivHeroPhoto"
                android:layout_width="@dimen/hero_hero_photo_size"
                android:layout_height="@dimen/hero_hero_photo_size"
                android:layout_margin="@dimen/hero_hero_photo_margin"
                android:contentDescription="@null"
                android:src="@mipmap/ic_launcher" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/hero_hero_information_margin_start"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvHeroName"
                    style="@style/TitleText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Hero name" />

                <TextView
                    android:id="@+id/tvHeroAlias"
                    style="@style/ContentText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Alias Name" />

                <TextView
                    android:id="@+id/tvHeroType"
                    style="@style/DescriptionText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Type" />

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>