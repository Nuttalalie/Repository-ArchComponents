<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AccentButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:colorButtonNormal">@color/accent</item>
        <item name="android:textColor">@color/textWhite</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="DescriptionText">
        <item name="android:textColor">@color/textGray</item>
        <item name="android:textSize">@dimen/default_text_description_size</item>
    </style>

    <style name="ContentText">
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:textSize">@dimen/default_text_content_size</item>
    </style>

    <style name="TitleText">
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:textSize">@dimen/default_text_title_size</item>
    </style>

</resources>
